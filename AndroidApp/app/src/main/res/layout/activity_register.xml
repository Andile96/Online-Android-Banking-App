<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="80dp"
                  android:background="@drawable/ufsvision130"
                  android:contentDescription="@null"/>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/create_account"
                  android:textSize="33sp"
                  android:textColor="@color/darkblue"
                  android:textAlignment="center"/>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
                  android:orientation="vertical"
                  android:padding="20dp">

                     <TableLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:stretchColumns="1">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                   <com.google.android.material.textfield.TextInputLayout

                                       android:id="@+id/UserTypeLayout"
                                       android:layout_width="0dp"
                                       android:layout_height="wrap_content"
                                       android:layout_weight="1"
                                       android:hint="@string/user_type"
                                       android:labelFor="@id/spnGender"
                                       app:boxBackgroundMode="outline"
                                       app:boxStrokeColor="@color/blackblue"
                                       app:shapeAppearanceOverlay="@style/OutlineRoundShape">

                                          <AutoCompleteTextView
                                              android:id="@+id/spnUserType"
                                              android:layout_width="match_parent"
                                              android:layout_height="57dp"
                                              android:drawableEnd="@android:drawable/arrow_down_float"
                                              android:focusable="true"
                                              android:inputType="none"
                                              android:padding="10dp" />

                                   </com.google.android.material.textfield.TextInputLayout>

                                   <com.google.android.material.textfield.TextInputLayout
                                       android:id="@+id/txtStudentNumber"
                                       android:layout_width="0dp"
                                       android:layout_height="wrap_content"
                                       android:layout_weight="1"
                                       android:hint="@string/studentNum"
                                       android:paddingStart="7dp"
                                       app:boxBackgroundMode="outline"
                                       app:boxStrokeColor="@color/blackblue"
                                       app:shapeAppearanceOverlay="@style/OutlineRoundShape"
                                       tools:ignore="RtlSymmetry"
                                       android:visibility="gone">

                                          <com.google.android.material.textfield.TextInputEditText
                                              android:layout_width="match_parent"
                                              android:layout_height="wrap_content"
                                              android:inputType="number"
                                              android:textColor="@color/darkblue"
                                              android:id="@+id/txtStudNum"/>

                                   </com.google.android.material.textfield.TextInputLayout>
                                   <com.google.android.material.textfield.TextInputLayout
                                       android:paddingStart="7dp"
                                       android:id="@+id/txtStaffNum"
                                       android:layout_width="0dp"
                                       android:layout_weight="1"
                                       android:layout_height="wrap_content"
                                       android:hint="@string/staffNum"
                                       app:boxBackgroundMode="outline"
                                       app:boxStrokeColor="@color/blackblue"
                                       app:shapeAppearanceOverlay="@style/OutlineRoundShape"
                                       android:visibility="gone">

                                          <com.google.android.material.textfield.TextInputEditText
                                              android:layout_width="match_parent"
                                              android:layout_height="wrap_content"
                                              android:inputType="number"
                                              android:textColor="@color/darkblue"
                                              android:id="@+id/txtStafNum"/>

                                   </com.google.android.material.textfield.TextInputLayout>
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp">

                                   <com.google.android.material.textfield.TextInputLayout
                                       android:id="@+id/lastnamelayout"
                                       android:layout_width="0dp"
                                       android:layout_height="wrap_content"
                                       android:layout_weight="1"
                                       android:hint="@string/last_name"
                                       app:boxBackgroundMode="outline"
                                       app:boxStrokeColor="@color/blackblue"
                                       app:shapeAppearanceOverlay="@style/OutlineRoundShape">

                                          <com.google.android.material.textfield.TextInputEditText
                                              android:layout_width="match_parent"
                                              android:layout_height="wrap_content"
                                              android:inputType="text"
                                              android:textColor="@color/darkblue"
                                              android:id="@+id/txtlstNam"/>

                                   </com.google.android.material.textfield.TextInputLayout>

                                   <com.google.android.material.textfield.TextInputLayout
                                       android:id="@+id/firstnameLayout"
                                       android:layout_width="0dp"
                                       android:layout_height="wrap_content"
                                       android:layout_weight="1"
                                       android:hint="@string/first_name"
                                       android:paddingStart="7dp"
                                       app:boxBackgroundMode="outline"
                                       app:boxStrokeColor="@color/blackblue"
                                       app:shapeAppearanceOverlay="@style/OutlineRoundShape"
                                       tools:ignore="RtlSymmetry">

                                          <com.google.android.material.textfield.TextInputEditText
                                              android:layout_width="match_parent"
                                              android:layout_height="wrap_content"
                                              android:inputType="text"
                                              android:textColor="@color/darkblue"
                                              android:id="@+id/txtfstNam"/>

                                   </com.google.android.material.textfield.TextInputLayout>
                            </TableRow>
                     </TableLayout>

                     <com.google.android.material.textfield.TextInputLayout
                         android:layout_marginTop="5dp"
                         android:id="@+id/NationalityLayout"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:hint="@string/txtnationality"

                         app:boxBackgroundMode="outline"
                         app:boxStrokeColor="@color/blackblue"
                         app:shapeAppearanceOverlay="@style/OutlineRoundShape">

                            <AutoCompleteTextView
                                android:id="@+id/spnNationality"
                                android:layout_width="match_parent"
                                android:layout_height="57dp"

                                android:drawableEnd="@android:drawable/arrow_down_float"
                                android:focusable="true"
                                android:inputType="none"
                                android:padding="10dp" />
                     </com.google.android.material.textfield.TextInputLayout>

                     <com.google.android.material.textfield.TextInputLayout
                         android:layout_marginTop="5dp"
                         android:id="@+id/txtID"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:hint="@string/identification"
                         app:boxBackgroundMode="outline"
                         app:boxStrokeColor="@color/blackblue"
                         app:shapeAppearanceOverlay="@style/OutlineRoundShape"
                         android:visibility="gone">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:textColor="@color/darkblue"
                                android:id="@+id/txtIdentification"/>

                     </com.google.android.material.textfield.TextInputLayout>

                     <com.google.android.material.textfield.TextInputLayout
                         android:layout_marginTop="5dp"
                         android:id="@+id/txtPassport"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:hint="@string/passport"
                         app:boxBackgroundMode="outline"
                         app:boxStrokeColor="@color/blackblue"
                         app:shapeAppearanceOverlay="@style/OutlineRoundShape"
                         android:visibility="gone">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:textColor="@color/darkblue"
                                android:id="@+id/txtPass"/>

                     </com.google.android.material.textfield.TextInputLayout>
                     <TableLayout
                         android:layout_marginTop="5dp"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:stretchColumns="1">
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                   <com.google.android.material.textfield.TextInputLayout
                                       android:id="@+id/GenderLayout"
                                       android:layout_width="0dp"
                                       android:layout_height="wrap_content"
                                       android:hint="@string/select_gender"
                                       android:labelFor="@id/spnGender"
                                       app:boxBackgroundMode="outline"
                                       app:boxStrokeColor="@color/blackblue"
                                       app:shapeAppearanceOverlay="@style/OutlineRoundShape"
                                       android:layout_weight="1">

                                          <AutoCompleteTextView
                                              android:id="@+id/spnGender"
                                              android:layout_width="match_parent"
                                              android:layout_height="57dp"
                                              android:drawableEnd="@android:drawable/arrow_down_float"
                                              android:focusable="true"
                                              android:hint="@string/txtselect_gender"
                                              android:inputType="none"
                                              android:padding="10dp" />
                                   </com.google.android.material.textfield.TextInputLayout>

                                   <com.google.android.material.textfield.TextInputLayout
                                       android:layout_marginStart="5dp"
                                       android:id="@+id/dateInputLayout"
                                       android:layout_width="0dp"
                                       android:layout_height="wrap_content"
                                       android:hint="@string/date"
                                       app:boxBackgroundMode="outline"
                                       app:boxStrokeColor="@color/blackblue"
                                       app:endIconContentDescription="Pick a date"
                                       app:endIconDrawable="@drawable/baseline_calendar_month_24"
                                       app:endIconMode="custom"
                                       app:shapeAppearanceOverlay="@style/OutlineRoundShape"
                                       android:layout_weight="1">

                                          <com.google.android.material.textfield.TextInputEditText
                                              android:id="@+id/dateInputEditText"
                                              android:layout_width="match_parent"
                                              android:layout_height="wrap_content"
                                              android:clickable="true"
                                              android:focusable="false"
                                              android:inputType="none" />

                                   </com.google.android.material.textfield.TextInputLayout>
                            </TableRow>
                     </TableLayout>


                     <com.google.android.material.textfield.TextInputLayout
                         android:layout_marginTop="5dp"
                         android:id="@+id/EmailLayout"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:hint="@string/email"
                         app:boxBackgroundMode="outline"
                         app:boxStrokeColor="@color/blackblue"
                         app:endIconContentDescription="Enter Email"
                         app:endIconDrawable="@drawable/baseline_email_24"
                         app:endIconMode="custom"
                         app:shapeAppearanceOverlay="@style/OutlineRoundShape">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textEmailAddress"
                                android:textColor="@color/darkblue"
                                android:id="@+id/txtEmailAdress"/>

                     </com.google.android.material.textfield.TextInputLayout>

                     <com.google.android.material.textfield.TextInputLayout
                         android:layout_marginTop="5dp"
                         android:id="@+id/cellPhoneNumLayout"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:hint="@string/txtphone"
                         app:boxBackgroundMode="outline"
                         app:boxStrokeColor="@color/blackblue"
                         app:endIconContentDescription="Enter cell phone number"
                         app:endIconDrawable="@drawable/baseline_phone_24"
                         app:endIconMode="custom"
                         app:shapeAppearanceOverlay="@style/OutlineRoundShape">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="phone"
                                android:textColor="@color/darkblue"
                                android:id="@+id/txtPhoneNum"/>

                     </com.google.android.material.textfield.TextInputLayout>

                     <TableLayout
                         android:layout_marginTop="5dp"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:stretchColumns="1">
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                   <com.google.android.material.textfield.TextInputLayout
                                       android:id="@+id/PasswordLayout"
                                       android:layout_weight="1"
                                       android:layout_width="0dp"
                                       android:layout_height="wrap_content"
                                       android:layout_marginBottom="12dp"
                                       android:hint="@string/txtPassword"
                                       app:boxBackgroundMode="outline"
                                       app:boxStrokeColor="@color/blackblue"
                                       app:endIconMode="password_toggle"
                                       app:shapeAppearanceOverlay="@style/OutlineRoundShape">

                                          <com.google.android.material.textfield.TextInputEditText
                                              android:layout_width="match_parent"
                                              android:layout_height="wrap_content"
                                              android:inputType="textPassword"
                                              android:id="@+id/txtPassword"/>

                                   </com.google.android.material.textfield.TextInputLayout>

                                   <com.google.android.material.textfield.TextInputLayout
                                       android:id="@+id/ConfirmPasswordLayout"
                                       android:layout_marginStart="7dp"
                                       android:layout_weight="1"
                                       android:layout_width="0dp"
                                       android:layout_height="wrap_content"
                                       android:layout_marginBottom="12dp"
                                       android:hint="@string/txtConfirmPass"
                                       app:boxBackgroundMode="outline"
                                       app:boxStrokeColor="@color/blackblue"
                                       app:endIconMode="password_toggle"
                                       app:endIconTint="@color/shrine_red"
                                       app:shapeAppearanceOverlay="@style/OutlineRoundShape">

                                          <com.google.android.material.textfield.TextInputEditText
                                              android:layout_width="match_parent"
                                              android:layout_height="wrap_content"
                                              android:inputType="textPassword"
                                              android:id="@+id/ConfirmPassword"/>

                                   </com.google.android.material.textfield.TextInputLayout>

                            </TableRow>
                     </TableLayout>

              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:layout_alignParentBottom="true">
                     <Button
                         android:layout_width="360dp"
                         android:layout_height="57dp"
                         android:text="@string/sign_up"
                         android:id="@+id/btnSign_Up"
                         android:textSize="18sp"
                         android:layout_marginTop="5dp"
                         android:backgroundTint="@color/shrine_red"
                         app:shapeAppearanceOverlay="@style/OutlineRoundShape" />
                     <TableRow
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/already_have_an_account"
                                android:layout_weight="1"
                                android:textSize="15sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sign_in"
                                android:layout_weight="1"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/realblue"
                                android:id="@+id/txtSignIn"/>
                     </TableRow>

              </LinearLayout>


       </LinearLayout>



</ScrollView>

